// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
    {
        "label": "debug editor",
        "build": {
            "command": "nix",
            "args": ["develop", "--command", "cargo", "build", "-p", "editor"],
        },
        "program": "$ZED_WORKTREE_ROOT/target/debug/editor",
        "sourceLanguages": ["rust"],
        "request": "launch",
        "adapter": "CodeLLDB",
    },
    {
        "label": "debug test common",
        "build": {
            "command": "nix",
            "args": [
                "develop",
                "--command",
                "cargo",
                "build",
                "--test",
                "common",
            ],
        },
        "program": "$ZED_WORKTREE_ROOT/target/debug/editor",
        "sourceLanguages": ["rust"],
        "request": "launch",
        "adapter": "CodeLLDB",
    },
]
